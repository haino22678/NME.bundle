<?xml version="1.0" encoding="UTF-8"?>
<site site="http://c.brightcove.com" plugin="http://admin.brightcove.com/.*"
	initialState="playing" version="1.0">

	<crop x="4" y="4" width="-7" height="-53" />

	<seekbar type="simple">
		<start x="70" y="-36" />
		<end x="415" y="-36" />
		<played>
			<color rgb="B2C846" />
			<color rgb="AAC043" />
			<color rgb="A3B840" />
			<color rgb="9CB03D" />
			<color rgb="95A83A" />
		</played>
	</seekbar>

	<state name="playing">
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="16" y="-15" />
				<goto state="paused" />
			</action>
		</event>
	</state>

	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="16" y="-15" />
				<goto state="playing" />
			</action>
		</event>
	</state>
</site>


